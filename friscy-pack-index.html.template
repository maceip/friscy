<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>friscy container</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/xterm@5.3.0/css/xterm.css" />
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            background: #1a1a2e;
            color: #eee;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        header {
            padding: 1rem;
            background: #16213e;
            border-bottom: 1px solid #0f3460;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .header-left { display: flex; flex-direction: column; }
        h1 { font-size: 1.2rem; font-weight: 500; }
        .status { font-size: 0.85rem; color: #888; margin-top: 0.25rem; }
        #export-btn {
            padding: 0.5rem 1rem;
            background: #0f3460;
            color: #ccc;
            border: 1px solid #1a4a7a;
            border-radius: 6px;
            font-size: 0.85rem;
            cursor: pointer;
            transition: background 0.2s, color 0.2s;
        }
        #export-btn:hover:not(:disabled) {
            background: #1a4a7a;
            color: #fff;
        }
        #export-btn:disabled {
            opacity: 0.4;
            cursor: not-allowed;
        }
        #terminal-container {
            flex: 1;
            padding: 1rem;
        }
        #terminal {
            height: 100%;
            border-radius: 8px;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-left">
            <h1>friscy container</h1>
            <div class="status" id="status">Loading...</div>
        </div>
        <button id="export-btn" disabled>Export Container</button>
    </header>
    <div id="terminal-container">
        <div id="terminal"></div>
    </div>

    <script type="module">
        import createFriscy from './friscy.js';
        import { Terminal } from 'https://cdn.jsdelivr.net/npm/xterm@5.3.0/lib/xterm.js';
        import { FitAddon } from 'https://cdn.jsdelivr.net/npm/@xterm/addon-fit@0.8.0/lib/xterm-addon-fit.js';

        const statusEl = document.getElementById('status');
        const terminalEl = document.getElementById('terminal');
        const exportBtn = document.getElementById('export-btn');

        async function main() {
            statusEl.textContent = 'Loading manifest...';

            // Load manifest
            const manifest = await fetch('./manifest.json').then(r => r.json());
            statusEl.textContent = `Image: ${manifest.image}`;

            // Initialize terminal
            const term = new Terminal({
                cursorBlink: true,
                fontSize: 14,
                fontFamily: 'Menlo, Monaco, "Courier New", monospace',
                theme: {
                    background: '#0d1117',
                    foreground: '#c9d1d9',
                }
            });
            const fitAddon = new FitAddon();
            term.loadAddon(fitAddon);
            term.open(terminalEl);
            fitAddon.fit();

            window.addEventListener('resize', () => fitAddon.fit());

            term.writeln('\x1b[1;32mfriscy\x1b[0m - Container runtime in WebAssembly');
            term.writeln(`Loading ${manifest.image}...`);
            term.writeln('');

            // Load rootfs
            statusEl.textContent = 'Loading rootfs...';
            const rootfs = await fetch('./rootfs.tar').then(r => r.arrayBuffer());
            term.writeln(`Loaded rootfs: ${(rootfs.byteLength / 1024 / 1024).toFixed(1)} MB`);

            // Initialize friscy
            statusEl.textContent = 'Initializing runtime...';
            const Module = await createFriscy({
                print: (text) => term.writeln(text),
                printErr: (text) => term.writeln('\x1b[31m' + text + '\x1b[0m'),
            });

            // Load rootfs into virtual filesystem
            const rootfsData = new Uint8Array(rootfs);
            Module.FS.writeFile('/rootfs.tar', rootfsData);

            // Set up stdin from terminal (Ctrl-D sends EOF)
            Module._stdinBuffer = [];
            Module._stdinEOF = false;
            term.onData((data) => {
                for (let i = 0; i < data.length; i++) {
                    const ch = data.charCodeAt(i);
                    if (ch === 4) { // Ctrl-D = EOF
                        Module._stdinEOF = true;
                        return;
                    }
                    Module._stdinBuffer.push(ch);
                }
            });

            statusEl.textContent = 'Running...';
            term.writeln('Starting: ' + manifest.entrypoint);
            term.writeln('â”€'.repeat(40));

            // Connect terminal output to xterm.js
            Module._termWrite = (text) => term.write(text);

            // Enable export button now that runtime is ready
            exportBtn.disabled = false;
            exportBtn.addEventListener('click', () => {
                const prevText = exportBtn.textContent;
                exportBtn.textContent = 'Exporting...';
                exportBtn.disabled = true;

                try {
                    const sizePtr = Module._malloc(4);
                    const dataPtr = Module._friscy_export_tar(sizePtr);
                    const size = Module.HEAPU32[sizePtr >> 2];
                    const tarData = new Uint8Array(Module.HEAPU8.buffer, dataPtr, size);

                    // Must copy since the buffer could be detached
                    const copy = new Uint8Array(tarData);

                    const blob = new Blob([copy], { type: 'application/x-tar' });
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'container-export.tar';
                    a.click();
                    URL.revokeObjectURL(url);

                    Module._free(dataPtr);
                    Module._free(sizePtr);

                    term.writeln('');
                    term.writeln('\x1b[1;32mExported container filesystem as container-export.tar\x1b[0m');
                } catch (e) {
                    term.writeln('');
                    term.writeln('\x1b[31mExport failed: ' + e.message + '\x1b[0m');
                    console.error('Export error:', e);
                } finally {
                    exportBtn.textContent = prevText;
                    exportBtn.disabled = false;
                }
            });

            // Run the container (JSPI enables interactive I/O by suspending
            // Wasm execution when stdin has no data, yielding to the event loop)
            try {
                const exitCode = await Module.callMain([
                    '--rootfs', '/rootfs.tar',
                    manifest.entrypoint
                ]);
                term.writeln('');
                term.writeln(`\x1b[33mProcess exited with code ${exitCode}\x1b[0m`);
                statusEl.textContent = `Exited (${exitCode})`;
            } catch (e) {
                if (e.name === 'ExitStatus') {
                    term.writeln('');
                    term.writeln(`\x1b[33mProcess exited with code ${e.status}\x1b[0m`);
                    statusEl.textContent = `Exited (${e.status})`;
                } else {
                    term.writeln('\x1b[31mError: ' + e.message + '\x1b[0m');
                    statusEl.textContent = 'Error';
                }
            }
        }

        main().catch(e => {
            console.error(e);
            statusEl.textContent = 'Error: ' + e.message;
        });
    </script>
</body>
</html>
